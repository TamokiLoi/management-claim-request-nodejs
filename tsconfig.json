{
    "compilerOptions": {
        "typeRoots": ["./src/types"],
        "target": "ES6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "removeComments": false,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
